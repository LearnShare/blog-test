generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  AUTHOR
  USER
}

model Account {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  password  String
  name      String     @default("")
  uid       String     @unique
  avatar    Int?
  avatarUrl String?
  role      Role       @default(USER)
  intro     String     @default("")
  verified  Boolean    @default(false)
  disabled  Boolean    @default(false)
  posts     Post[]
  bookmarks Bookmark[]
  ctime     DateTime   @default(now())
  utime     DateTime   @updatedAt
}

enum ContentFormat {
  TEXT
  MARKDOWN
  HTML
}

model Post {
  id        Int           @id @default(autoincrement())
  author    Account       @relation(fields: [authorId], references: [id])
  authorId  Int
  uid       String        @unique
  cover     Int?
  coverUrl  String?
  title     String
  intro     String
  content   String
  format    ContentFormat @default(TEXT)
  images    Int[]
  published Boolean       @default(false)
  views     Int           @default(0)
  bookmarks Bookmark[]
  ctime     DateTime      @default(now())
  utime     DateTime      @updatedAt
}

enum FileType {
  UNKNOWN
  IMAGE
  VIDEO
  AUDIO
}

model File {
  id      Int      @id @default(autoincrement())
  creator Int
  hash    String   @unique
  type    FileType @default(UNKNOWN)
  mime    String
  name    String
  ext     String
  size    Int
  ctime   DateTime @default(now())
}

enum CodeType {
  ACCOUNT_VERIFICATION
  RESET_PASSWORD
}

model Code {
  id      Int      @id @default(autoincrement())
  code    String
  type    CodeType
  account Int
  used    Boolean  @default(false)
  ctime   DateTime @default(now())
  etime   DateTime
}

enum TargetType {
  POST
}

model RequestLog {
  id     Int        @id @default(autoincrement())
  time   DateTime   @default(now())
  ip     String
  type   TargetType
  target Int
}

model Bookmark {
  time      DateTime @default(now())
  account   Account  @relation(fields: [accountId], references: [id])
  accountId Int
  post      Post     @relation(fields: [postId], references: [id])
  postId    Int

  @@id([accountId, postId])
}
